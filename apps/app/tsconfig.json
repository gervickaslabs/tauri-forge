{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@forge-config": ["./src/forge.config.ts"]
    }
  },
  "references": [
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/forge"
    }
  ],
  "include": [
    "${configDir}",
    "${configDir}/src",
    ".next/types/**/*.ts",
    "./out/next/types/**/*.ts"
  ]
}
