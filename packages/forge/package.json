{
  "name": "@tauriforge/forge",
  "version": "0.0.1",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./src/lib/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./instance": "./src/instance/index.ts",
    "./instance/*": {
      "default": "./src/instance/*.ts",
      "import": "./src/instance/*.ts",
      "types": "./dist/instance/*.d.ts"
    },
    "./config": "./src/config/index.ts",
    "./config/*": {
      "default": "./src/config/*.ts",
      "import": "./src/config/*.ts",
      "types": "./dist/config/*.d.ts"
    },
    "./adapters": "./src/adapters/index.ts",
    "./adapters/*": {
      "default": "./src/adapters/*.ts",
      "import": "./src/adapters/*.ts",
      "types": "./dist/adapters/*.d.ts"
    },
    "./globals": "./src/globals/index.ts",
    "./globals/*": {
      "default": "./src/globals/*.ts",
      "import": "./src/globals/*.ts",
      "types": "./dist/globals/*.d.ts"
    },
    "./plugins": "./src/plugins/index.ts",
    "./plugins/*": {
      "default": "./src/plugins/*.ts",
      "import": "./src/plugins/*.ts",
      "types": "./dist/plugins/*.d.ts"
    },
    "./react/hooks/*": "./src/react/hooks/*.ts",
    "./react/hooks/utils/*": "./src/react/hooks/utils/*.ts",
    "./react/components/*": "./src/react/components/*.tsx"
  },
  "private": true,
  "scripts": {
    "test": "vitest run",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "dev": "tsc --watch",
    "build": "tsc"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-stronghold": "^2.3.0",
    "lodash": "^4.17.21",
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@tauriforge/eslint-config": "workspace:*",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.2.1",
    "@types/react": "19.1.10",
    "eslint": "^9.33.0",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  }
}
