{
  "name": "@tauriforge/forge",
  "version": "0.0.1",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./src/lib/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./instance": "./src/instance/index.ts",
    "./instance/types": "./src/instance/types.ts",
    "./config": "./src/config/index.ts",
    "./config/types": "./src/config/types.ts",
    "./adapters": "./src/adapters/index.ts",
    "./adapters/registry": "./src/adapters/registry.ts",
    "./adapters/command": "./src/adapters/command.ts",
    "./adapters/event": "./src/adapters/event.ts",
    "./adapters/types": "./src/adapters/types.ts",
    "./globals": "./src/globals/index.ts",
    "./globals/types": "./src/globals/types.ts",
    "./plugins": "./src/plugins/index.ts",
    "./plugins/types": "./src/plugins/types.ts",
    "./lib/*": "./src/lib/*.ts",
    "./react/hooks/*": "./src/react/hooks/*.ts",
