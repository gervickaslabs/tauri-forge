  "devDependencies": {
    "@tauriforge/eslint-config": "workspace:*",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.2.1",
    "@types/react": "19.1.10",
    "eslint": "^9.33.0",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  }
}
