{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "removeComments": false,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@repo/forge/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}
