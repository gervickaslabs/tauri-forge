{
  "name": "@tauriforge/ui",
  "version": "0.0.1",
  "sideEffects": [
    "*.scss",
    "*.css"
  ],
  "files": [
    "dist"
  ],
  "rootDir": "src",
  "exports": {
    "./styles.css": "./dist/styles.css",
    "./components/*": "./src/components/*.tsx",
    "./hooks/*": "./src/hooks/*.ts",
    "./lib/*": "./src/lib/*.ts"
  },
  "license": "MIT",
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules *.tsbuildinfo",
    "dev:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --watch",
    "dev:components": "tsc --watch",
    "build:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css",
    "build:components": "tsc",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@tauriforge/eslint-config": "workspace:*",
    "@tauriforge/tailwind-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.11",
    "@types/react": "^19.1.10",
    "eslint": "^9.33.0",
    "tailwindcss": "^4.1.11",
    "react": "^19.1.1",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6"
  }
}
